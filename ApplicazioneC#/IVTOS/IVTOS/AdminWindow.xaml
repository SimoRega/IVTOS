        <GroupBox Header="Gestione Iscrizioni Torneo" HorizontalAlignment="Left" Height="80" Margin="730,193,0,0" VerticalAlignment="Top" Width="321"/>
        <Button x:Name="btnIscrizioniSquadra" Content="Iscrizioni di una Squadra" HorizontalAlignment="Left" Margin="737,244,0,0" VerticalAlignment="Top" Width="148" Click="btnIscrizioniSquadra_Click"/>
        <Button x:Name="btnSelezioneSquadra" Content="Seleziona Squadra" HorizontalAlignment="Left" Margin="899,244,0,0" VerticalAlignment="Top" Width="142" Click="btnSelezioneSquadra_Click"/>
        <Button x:Name="btnTerminaTorneo" Content="Termina Torneo" HorizontalAlignment="Left" Margin="899,123,0,0" VerticalAlignment="Top" Width="142" Click="btnTerminaTorneo_Click"/>
        <ComboBox x:Name="cmbStatistiche" HorizontalAlignment="Left" Margin="737,298,0,0" VerticalAlignment="Top" Width="226"/>
        <Button x:Name="btnEseguiStatistiche" Content="Esegui" HorizontalAlignment="Left" Margin="971,298,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="btnEseguiStatistiche_Click"/>
        <GroupBox Header="Statistiche Generali Tornei" HorizontalAlignment="Left" Height="55" Margin="730,278,0,0" VerticalAlignment="Top" Width="323"/>

    </Grid>
</Window>
